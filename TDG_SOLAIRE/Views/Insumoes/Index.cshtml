@model IEnumerable<Models.Models.Insumo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout0.cshtml";
}

<h2>Index</h2>

<p>
    <input type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#Insumoes" onclick="Crear()" value="Crear Nuevo Insumoe">
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InsumoUtilizado.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnidadMedida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InsumoUtilizado.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnidadMedida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioUnitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}</table>

    @Html.BoostStrapModal("Insumoes", customTarget: "InsumoesModalContent", useLargeModal: true)
    <script type="text/javascript">


    function Crear() {
        $("#InsumoesModalContent").html('');
        $.ajax({
            type: "GET",
            url: '@Url.Action("Create", "Insumoes")',
            success: function (view) {
                $("#InsumoesModalContent").html(view);
            },

        });
    }
    function Editar() {
        $("#EmpresaModalContent").html('');
        var Id = $("#item_Id").val();
        $.ajax({
            type: "GET",
            url: '@Url.Action("Edit", "Empresas")' + "/" + Id,
            //data: Id,
            success: function (view) {
                $("#EmpresaModalContent").html(view);
            },

        });
    }
    function Detalles() {
        $("#EmpresaModalContent").html('');
        var Id = $("#item_Id").val();
        $.ajax({
            type: "GET",
            url: '@Url.Action("Details", "Empresas")' + "/" + Id,
            //data: Id,
            success: function (view) {
                $("#EmpresaModalContent").html(view);
            },

        });
    }

</script>
